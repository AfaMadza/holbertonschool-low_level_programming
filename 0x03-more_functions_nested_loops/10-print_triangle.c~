#include "holberton.h"
/**
* print_triangle - print n number of lines.
*
* Return: None.
* @size: number of times to print hash
*/
void print_triangle(int size)
{
	int hash;
	int spaces;

	if (size <= 0)
	{
		_putchar('\n');
	}
	else
	{
		for (hash = 0; hash < size; hash++)
		{
			for (spaces = 0; spaces > hash; spaces--)
			{
				_putchar(' ');
			}
			_putchar(35);
			_putchar('\n');
		}
	}
}
